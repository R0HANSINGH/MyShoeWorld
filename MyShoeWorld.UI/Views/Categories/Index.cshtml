@using MyShoeWorld.Models

@model IEnumerable<Category>

<h1>Welcome to MyshoeWorld Category List </h1>

     <table class="table">
    
    <tbody>
        <thead>
           <tr>
               @*<th scope="col">CategoryId</th>*@
                <th scope="col">CategoryName</th>
                <th scope="col">Description</th>
                <th scope="col">Show Products</th>
            </tr>
        </thead>
        @foreach (Category category in Model)
        {
                    <tr>
                        @*<td>@category.CategoryId</td>*@
                        <td>@category.CategoryName</td>
                        <td>@category.Description</td>
                        <td>
                        <a class="btn btn-primary" asp-controller="Products"
                           asp-action="CategoryProducts" 
                           asp-route-id="@category.CategoryId"> Show Products</a>
                        </td>
                    </tr>
                
           }
    </tbody>
    </table>
  

